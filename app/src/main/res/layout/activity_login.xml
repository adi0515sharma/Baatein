<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/sign_in"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sign in"
            android:textAlignment="center"

            android:textSize="40dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/email_id_sign_in"
            android:layout_width="match_parent"
            android:layout_below="@id/sign_in"
            android:layout_height="100dp"
            android:hint="Enter email"></EditText>

        <EditText
            android:id="@+id/password_sign_in"
            android:layout_width="match_parent"
            android:layout_below="@id/email_id_sign_in"
            android:layout_height="100dp"
            android:hint="Enter email"></EditText>

        <Button
            android:id="@+id/submit_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:layout_below="@id/password_sign_in"
            ></Button>


        <Button
            android:id="@+id/sign_up_now"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:layout_toRightOf="@id/submit_login"
            android:layout_below="@id/password_sign_in"
            ></Button>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>